@page
@model IndexModel
@{
    ViewData["Title"] = "Pixelboard Client";
}

<div class="container">
    <header class="header">
        <h1>
            PIXELBOARD CLIENT
            <span class="badge dev-badge" environment="Development">DEV</span>
        </h1>
    </header>

    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-3" style="max-width: 600px; margin: 0 auto;">
        <div class="card-header d-flex justify-content-between align-items-center">
            <strong>🔐 Auth Status</strong>
            <span class="badge @(Model.IsAuthenticated ? "bg-success" : "bg-danger")" id="authStatus">
                @(Model.IsAuthenticated ? "✅ Eingeloggt" : "❌ Gast")
            </span>
        </div>
        <div class="card-body">
            @if (Model.IsAuthenticated)
            {
                <div class="d-flex gap-2 flex-wrap">
                    <span class="small text-muted">User: @Model.UserName</span>
                    <span class="small text-muted">ID: @Model.UserId</span>
                    <a href="/Index?handler=IdToken" class="px-4 py-2 bg-purple-600 text-white rounded hover:bg-purple-700">
                        📋 ID Token (MS3)
                    </a>
                    <form asp-page-handler="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-danger">Logout</button>
                    </form>
                </div>
            }
            else
            {
                <a asp-page-handler="Login" class="btn btn-sm btn-primary">Login mit Keycloak</a>
            }
        </div>
    </div>

    <!-- MS5 2.1 Budget Dashboard (exakt aus Onenote) -->
    <div class="team-stats mb-4">
        <div class="card mx-auto" style="max-width: 400px;">
            <div class="card-header">
                <strong>🎨 Team #@Model.TeamNumber Budget</strong>
            </div>
            <div class="card-body text-center">
                <div class="budget-bar mb-2">
                    <div id="budgetBar" class="budget-fill" style="width: 100%; background: linear-gradient(90deg, #4ade80, #10b981);"></div>
                </div>
                <div id="budgetText" class="h5 fw-bold">100 / 100</div>
                <small class="text-muted">Verbleibende Pixel zum Setzen</small>
            </div>
        </div>
    </div>

    <div class="mode-buttons text-center mb-4">
        <button class="btn mode-btn active" data-mode="cache">Cache</button>
        <button class="btn mode-btn" data-mode="parallel">Parallel</button>
        <button class="btn mode-btn" data-mode="sequential">Sequentiell</button>
    </div>

    <!-- MS5 2.2 Leaderboard (exakt aus Onenote) -->
    <div class="leaderboard mb-5">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <strong>🏆 RANG LISTE - Live Punkte</strong>
                <button class="btn btn-sm btn-outline-primary" onclick="loadLeaderboard()">🔄</button>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-sm mb-0">
                        <thead class="table-dark">
                            <tr><th>#</th><th>Team</th><th>Punkte</th></tr>
                        </thead>
                        <tbody id="leaderboardBody">
                            <tr><td colspan="3" class="text-center text-muted">Laden... (MS5.2.2)</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Rest des Boards (unverändert) -->
    <div class="team-section text-center mb-5">
        <label for="teamNumber" class="form-label fw-bold">Team Nummer</label>
        <input type="number" id="teamNumber" class="form-control team-input mx-auto" value="@Model.TeamNumber"
               min="1" max="10" style="max-width: 140px;" onchange="loadTeamBudget()" />
    </div>

    <div class="board-wrapper text-center">
        <div class="board-container mx-auto">
            @if (Model.Pixels != null)
            {
                for (int y = 0; y < Model.Pixels.GetLength(1); y++)
                {
                    for (int x = 0; x < Model.Pixels.GetLength(0); x++)
                    {
                        var pixel = Model.Pixels[x, y];
                        <div class="pixel"
                             id="pixel-@x-@y"
                             data-x="@x" data-y="@y"
                             style="background-color: rgb(@(pixel?.Red ?? 0), @(pixel?.Green ?? 0), @(pixel?.Blue ?? 0));"
                             onclick="setPixel(@x, @y)">
                        </div>
                    }
                }
            }
        </div>
        <div class="board-label mt-3">
            PIXELBOARD <small>(16 × 16)</small>
            <span id="liveIndicator">🔴 Live</span>
        </div>
    </div>
</div>

<style>
    /* Deine alten Styles + Onenote Styles */
    .pixel { width: 25px; height: 25px; border: 1px solid #333; display: inline-block; margin: 1px; cursor: pointer; transition: all 0.2s; }
    .pixel:hover { transform: scale(1.1); box-shadow: 0 0 10px rgba(0,0,0,0.5); }
    .budget-bar { height: 20px; background: #e5e7eb; border-radius: 10px; overflow: hidden; }
    .budget-fill { height: 100%; transition: width 0.5s ease; border-radius: 10px; }
    .mode-btn { margin: 0 5px; }
    .mode-btn.active { background: #0d6efd; color: white; }
    .log-content { background: #f8f9fa; border-radius: 5px; padding: 10px; font-family: monospace; }
    .board-container { display: flex; flex-wrap: wrap; max-width: 450px; margin: 0 auto; }
</style>

@section Scripts {
    <script>
        // Dein vollständiges JS aus Onenote + SSE + Token-Check
        let logCounter = 0, eventSource = null, myTeamBudget = 100, currentMode = 'cache';

        function initSSE() { /* ... dein SSE-Code aus vorher ... */ }

        async function loadTeamBudget() {
            const teamId = document.getElementById('teamNumber').value;
            try {
                const resp = await fetch(`/Index?handler=TeamBudget&teamId=${teamId}`);
                const data = await resp.json();
                myTeamBudget = parseInt(data.budgetRemaining) || 100;

                const percent = Math.max(0, (myTeamBudget / 100) * 100);
                const bar = document.getElementById('budgetBar');
                const text = document.getElementById('budgetText');

                bar.style.width = `${percent}%`;
                text.textContent = `${myTeamBudget} / 100`;

                if (myTeamBudget < 10) {
                    bar.style.background = 'linear-gradient(90deg, #f59e0b, #d97706)';
                    addLog('⚠️ LOW BUDGET WARNING!', 'warning');
                }

                addLog(`Team ${teamId} Budget: ${myTeamBudget}/100`, 'success');
            } catch(e) {
                addLog('Budget API Fehler', 'error');
            }
        }

        async function loadLeaderboard() {
            try {
                const resp = await fetch('/api/teams/leaderboard');
                const teams = await resp.json();

                const tbody = document.getElementById('leaderboardBody');
                tbody.innerHTML = '';

                teams.sort((a,b) => b.points - a.points).forEach((team, i) => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${i+1}.</td>
                        <td><span class="badge fs-6 px-3 py-2" style="background: rgb(${team.color?.r||0},${team.color?.g||0},${team.color?.b||0})">
                            #${team.id} ${team.name}
                        </span></td>
                        <td><strong>${team.points || 0}</strong></td>
                    `;
                    tbody.appendChild(row);
                });

                if (teams.length) {
                    addLog(`${teams[0].name} führt die Rangliste!`, 'success');
                }
            } catch(e) {
                addLog('Rangliste Fehler', 'error');
            }
        }

        // setPixel, checkTokenExpiry, addLog, DOMContentLoaded – alles wie vorher
        // (kopiere aus deiner letzten Version, falls du sie hast)
    </script>
}