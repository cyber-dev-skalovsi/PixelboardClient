@page
@model IndexModel
@{
    ViewData["Title"] = "Pixelboard Client";
}

<div class="container">
    <header class="header">
        <h1>PIXELBOARD CLIENT</h1>
    </header>

    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="status-card mb-5">
        <div class="card-header">
            <strong>Status</strong>
        </div>
        <div class="card-body">
            <div class="status-grid">
                <div>
                    <small class="text-muted">Ladezeit</small>
                    <strong class="text-success">@Model.LoadTimeMs ms</strong>
                </div>
            </div>
        </div>
    </div>

    <div class="board-wrapper text-center">
        <div class="pixel-info-box">
            <div class="pixel-info-content">
                <small class="text-muted">Pixel Info:</small>
                <strong id="pixelCoords">-</strong>
                <strong id="pixelRGB">-</strong>
            </div>
        </div>

        <div class="board-container mx-auto">
            @if (Model.Pixels != null)
            {
                for (int y = 0; y < Model.Pixels.GetLength(1); y++)
                {
                    for (int x = 0; x < Model.Pixels.GetLength(0); x++)
                    {
                        var pixel = Model.Pixels[x, y];
                        <div class="pixel"
                             id="pixel-@x-@y"
                             data-x="@x" 
                             data-y="@y"
                             data-red="@pixel?.Red"
                             data-green="@pixel?.Green"
                             data-blue="@pixel?.Blue"
                             style="background-color: rgb(@(pixel?.Red ?? 0), @(pixel?.Green ?? 0), @(pixel?.Blue ?? 0));"
                             onmouseover="showPixelInfo(@x, @y)"
                             onmouseout="hidePixelInfo()">
                        </div>
                    }
                }
            }
        </div>
        <div class="board-label mt-3">PIXELBOARD <small>(16 × 16)</small></div>
    </div>
</div>

<script>
    function showPixelInfo(x, y) {
        const pixel = document.getElementById(`pixel-${x}-${y}`);
        if (pixel) {
            const red = pixel.getAttribute('data-red');
            const green = pixel.getAttribute('data-green');
            const blue = pixel.getAttribute('data-blue');
            
            document.getElementById('pixelCoords').textContent = `(${x}, ${y})`;
            document.getElementById('pixelRGB').textContent = `RGB(${red}, ${green}, ${blue})`;
        }
    }
    
    function hidePixelInfo() {
        document.getElementById('pixelCoords').textContent = '-';
        document.getElementById('pixelRGB').textContent = '-';
    }
</script>
