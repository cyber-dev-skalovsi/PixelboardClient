<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pixelboard Client</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- weitere Stylesheets falls nötig -->
</head>
<body>

    <!-- Minimalistische Top-Bar ohne Tabs -->
    <header class="border-bottom mb-4">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-between py-3">
                <a href="/" class="d-flex align-items-center text-dark text-decoration-none">
                    <h2 class="mb-0 fw-bold">PIXELBOARD CLIENT</h2>
                    <span class="badge bg-warning text-dark ms-2" environment="Development">DEV</span>
                </a>

                <!-- Optional: kleine Infos rechts (kannst du auch entfernen) -->
                <div class="text-end text-muted small">
                    <span>running in @Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT")</span>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer komplett entfernt -->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>